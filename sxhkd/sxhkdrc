# make a screenshot
Print
	~/.scripts/screenshot

# make sxhkd reload its configuration files:
super + shift + s
	pkill -USR1 -x sxhkd

# restart polybar
super + shift + p
	~/.scripts/restartpolybar

# restart bspwm
super + shift + b
	bspc wm -r

# terminal emulator
ctrl + alt + t
	kitty ~/.scripts/nvim

# terminal emulator connected to main pc with X11 forwarding enabled for clipboard support
super + t; super + s
	wol a8:a1:59:47:4e:c7; \
	kitty ssh wera@192.168.1.19 -t -Y ~/.scripts/nvim

super + Pause
	sleep 1; systemctl suspend

XF86AudioPause
	pulseaudio-control togmute

XF86AudioPlay
	pulseaudio-control togmute

#
# Rofi
#

# Rofi: search
super + s
	search

# Rofi: swich windows
super + d
	rofi -show window

# Rofi: clipboard
super + c
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Rofi: bluetooth menu
super + b
	rofi-bluetooth-switch

# Rofi: shortcuts
super + a
	rofi-menu

XF86Calculator
	rofi -show calc -modi calc -no-show-match -no-sort

# show Rofi shortcuts
super + shift + slash
	~/.scripts/rofi/rofi-help

# show all shortcuts
super + slash
	~/.scripts/sxhkd-help

# Rofi: mount
super + m
	rofi-mount

# Rofi: umount
super + u
	rofi-umount

# Rofi: spotify
super + x; super + x
	rofi-spotify

# Spotify play-pause
super + x; super + space
	playerctl -p spotify play-pause

super + x; super + n
	playerctl -p spotify next

super + x; super + p
	playerctl -p spotify previous

# terminal emulator
super + r; super + t
	kitty ~/.scripts/nvim

# Rofi: launch menu
super + r; super + r
	rofi drun -show drun -show-icons

# launch spotify
super + r; super + s
	gtk-launch spotify-adblock.desktop

# launch firefox
super + r; super + f
	gtk-launch firefox.desktop


#
# bspwm hotkeys
#

# balance the windows
super + alt + b
	~/.scripts/bspwm-balance

# swich monitors
super + grave
  bspc monitor -f next

# close and kill
super + {_,shift + } q; super + {_,shift + }q
	bspc node -{c,k}{ , }

# alternate between the tiled and monocle layout
super + w
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,e,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }n
	bspc node -f {prev,next}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + Tab
	bspc desktop -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop

super + {_,shift} + {1-8}
	bspc {desktop -f, node -d} '^{1-9}' --follow
super + {_,shift} + {F1,F2,F3}
	bspc {desktop -f, node -d} '^{6,7,8}' --follow

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel
 
#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# audio related hotkeys
#

super + v
	~/.scripts/bluetooth-change-profile # change profile

XF86AudioLowerVolume
  pulseaudio-control --volume-max 130 down
XF86AudioRaiseVolume
  pulseaudio-control --volume-max 130 up
XF86AudioMute
  pulseaudio-control togmute

alt + F3
	pulseaudio-control --volume-max 130 up
alt + F2
	pulseaudio-control --volume-max 130 down
alt + F1
	pulseaudio-control togmute

#
# brightness
#

# laptop:

XF86MonBrightnessUp
	brightnessctl set 10%+

XF86MonBrightnessDown
	brightnessctl set 10%-

# pc:

super + F10
	sudo ddccontrol -r 0x10 -W +5 dev:/dev/i2c-10
super + F9
	sudo ddccontrol -r 0x10 -W -5 dev:/dev/i2c-10

super + shift + F10
	sudo ddccontrol -r 0x10 -W +10 dev:/dev/i2c-7
super + shift + F9
	sudo ddccontrol -r 0x10 -W -10 dev:/dev/i2c-7

super + F11
	sudo ddccontrol -r 0xe2 -w 5 dev:/dev/i2c-10
super + F12
	sudo ddccontrol -r 0xe2 -w 6 dev:/dev/i2c-10

super + shift + F11
	sudo ddccontrol -r 0xe5 -W -1 dev:/dev/i2c-10
super + shift + F12
	sudo ddccontrol -r 0xe5 -W +1 dev:/dev/i2c-10

