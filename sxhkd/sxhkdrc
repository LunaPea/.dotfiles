#
# wm independent hotkeys
#


# make a screenshot
Print
	~/.scripts/screenshot

# make sxhkd reload its configuration files:
super + shift + s
	pkill -USR1 -x sxhkd

super + shift + p
	~/.scripts/restartpolybar

super + shift + b
	~/.scripts/killall.sh

# terminal emulator
ctrl + alt + t
	urxvt

# terminal emulator
super + alt + t
	samedir

# terminal emulator via ssh
# control + alt + s
	# urxvt -e ssh michal@192.168.1.50

super + Pause
	sleep 1; systemctl suspend


