# make a screenshot
Print
	screengrab

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
ctrl + alt + t
	urxvt

# terminal emulator
super + alt + t
	urxvt

# terminal emulator via ssh
control + alt + s
	urxvt -e ssh michal@192.168.1.50

super + F12
	systemctl suspend

super + p
 xclip -selection c ~/Documents/creeperFarm



